<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/web_server">
        <EditTextPreference
            android:defaultValue="8080"
            android:icon="@drawable/ic_baseline_web_24"
            android:key="port"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/setting_port_summary"
            android:title="@string/server_port" />
        <ListPreference
            android:key="sim"
            android:summary="@string/setting_sim_summary"
            android:title="SIM" />
    </PreferenceCategory>
</PreferenceScreen>